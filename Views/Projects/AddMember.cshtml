@{
    ViewData["Title"] = "Projects";
}

<div>
    <h1 class="">Add a member to project: @ViewBag.ProjectName</h1>
    <form asp-controller="Projects" asp-action="AddMember" method="post" asp-route-id="@ViewBag.Id">
        <div class="container">
            <div class="row">
            <div class="col">
                <select class="form-control" name="mail">
                    @foreach (var member in ViewBag.Members)
                    {
                        <option value="@member">@member</option>
                    }
                </select>
            </div>
            <div class="col">
                <input type="submit" value="Add" class="btn btn-success"/>
            </div>
            </div>
        </div>
    </form>
</div>